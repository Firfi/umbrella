{
	"compilerOptions": {
		"module": "es2020",
		"target": "es2020",
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"verbatimModuleSyntax": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"strict": true,
		"strictNullChecks": true
	},
	"exclude": ["./**/node_modules", "./**/test/fixtures"]
}
